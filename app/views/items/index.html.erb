<h1>🛍 ShopPlay - 商品一覧</h1>

<% @items.each do |item| %>
  <div style="border: 1px solid #ccc; padding: 1rem; margin-bottom: 1rem;">
    <% if item.image.attached? %>
      <%= image_tag item.image.variant(resize_to_limit: [200, 200]) %><br>
    <% end %>
    <strong><%= link_to item.name, item_path(item) %></strong><br>
    価格: <%= number_to_currency(item.price, unit: "¥") %><br>
    <%= truncate(item.description, length: 80) %>
  </div>
<% end %>
